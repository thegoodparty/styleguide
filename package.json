{
  "name": "goodparty-styleguide",
  "version": "1.3.2",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/design-tokens.css",
    "src/tailwind-theme.css",
    "src/typography.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup src/components/ui/index.ts --dts --format esm,cjs --out-dir dist --tsconfig tsconfig.app.json && npm run build:tokens && cp src/design-tokens.css src/tailwind-theme.css src/typography.css dist/ && echo '@import \"./design-tokens.css\";\n@import \"./tailwind-theme.css\";\n@import \"./typography.css\";' > dist/index.css",
    "build:tokens": "style-dictionary build --config style-dictionary.config.js",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:format": "npm run lint && npm run format",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "storybook:tokens": "npm run build:tokens && npm run storybook",
    "tokens:watch": "style-dictionary build --config style-dictionary.config.js --watch",
    "clean": "rm -rf dist storybook-static",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-accordion": "^1.2.10",
